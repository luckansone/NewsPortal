@model IEnumerable<NewsPortal.Web.ViewModel.NewsModel>

@{
    ViewBag.Title = "GetNewsByUser";
}
<!DOCTYPE html>
<html>
<body>
    @Scripts.Render("~/scripts/jquery-1.7.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/jquery")
    <h3>Hello, @ViewBag.Author!</h3>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    </p>
    <table class="table table-striped table-bordered" style="width:100%">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishTime)
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr data-id="@item.Id">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishTime)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Ajax.ActionLink("Delete", "Delete", new { id = item.Id}, new AjaxOptions {
                  HttpMethod = "DELETE",
                  Confirm = "Are you sure to delete this news?",
                  OnComplete = string.Format("DeleteInTable({0})", item.Id)
              },
                        new { @class = "btn btn-info" })
                    @Html.ActionLink("Tags", "GetTagsByNews", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Edit", "Edit", new { id =item.Id }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </table>
</body>
</html>
<script>
    function DeleteInTable(Id) {
        $("tr[data-id=" + Id+"]").remove();
    }</script>
<style>
    body {
        background-image: url(../../Content/img/wall.png);
        background-attachment: fixed;
    }
</style>