@model IEnumerable<NewsPortal.Web.ViewModel.TagModel>
<html>
<head></head>
<body>
    @Scripts.Render("~/scripts/jquery-1.7.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/jquery")

    <h2>Tags</h2>
    <p>
        @Html.ActionLink("Create New", "CreateTag", null, new { @class = "btn btn-info" })
    </p>

    <table class="table table-striped table-bordered" style="width:100%">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr data-id="@item.Id">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Ajax.ActionLink("Delete", "DeleteTag", new { id = item.Id}, new AjaxOptions {
                   HttpMethod = "DELETE",
                   Confirm = "Are you sure to delete this tag?",
                   OnComplete = string.Format("DeleteInTable({0})", item.Id)
               },
                         new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Back to List", "GetNewsByUser", null, new { @class = "btn btn-info" })
</body>
</html>
<script> 
    function DeleteInTable(Id) {
        $("tr[data-id=" + Id+"]").remove();
    }</script>
<style>
    body {
        background-image: url(../../Content/img/wall.png);
        background-attachment: fixed;
    }
</style>
